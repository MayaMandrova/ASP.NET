@model ProductModel;

@{
    ViewData["Home"] = "Lesson_7";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4"></h1>
    <br/>
    <h4>Изменить продукт:</h4>
    <form action="@Url.Action("ChangeProduct", "Home")" method="Post">
        <input type="hidden" name="id" value="@(Model.Id)"/><br/>
        Название:<br/>
        <input type="text" placeholder="Введите название" name="name" value="@Model.Name"/><br/>
        Описание:<br/>
        <input type="text" placeholder="Введите описание" name="description" value="@Model.Description"/><br/>
        Цена за штуку:<br/>
        <input type="number" step="0.01" placeholder="Введите цену за штуку" name="priceForPiece" value="@Model.PriceForPiece"/><br/>
        Количество:<br/>
        <input type="number" placeholder="Введите количество" name="quantity" value="@Model.Quantity"/><br/>
        <br/>
        <input type="submit" value="Edit"/>
    </form>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>

</div>